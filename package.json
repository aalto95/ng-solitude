{
  "name": "ng-solitude",
  "version": "0.1.1",
  "scripts": {
    "storybook": "ng run ng-solitude:storybook",
    "build-storybook": "ng run ng-solitude:build-storybook",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build ng-solitude --configuration production && npm run build:styles",
    "build:styles": "sass --no-source-map src/styles/styles.scss dist/ng-solitude/styles.css",
    "build:publish": "npm run build && npm run publish",
    "test": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "publish": "cd ./dist/ng-solitude/ && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aalto95/ng-solitude.git"
  },
  "peerDependencies": {
    "@angular/animations": ">=17.0.0",
    "@angular/common": ">=17.0.0",
    "@angular/core": ">=17.0.0",
    "@angular/forms": ">=17.0.0",
    "@angular/platform-browser": ">=17.0.0",
    "rxjs": "^7.0.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.3",
    "@angular-eslint/builder": "^20.1.1",
    "@angular-eslint/eslint-plugin": "^20.1.1",
    "@angular-eslint/eslint-plugin-template": "^20.1.1",
    "@angular-eslint/template-parser": "^20.1.1",
    "@angular/animations": "20.0.4",
    "@angular/cli": "^20.0.3",
    "@angular/common": "20.0.4",
    "@angular/compiler": "20.0.4",
    "@angular/compiler-cli": "^20.0.4",
    "@angular/core": "20.0.4",
    "@angular/forms": "20.0.4",
    "@angular/language-service": "^20.0.4",
    "@angular/platform-browser": "20.0.4",
    "@angular/platform-browser-dynamic": "20.0.4",
    "@angular/router": "20.0.4",
    "@compodoc/compodoc": "^1.1.26",
    "@storybook/addon-docs": "^9.0.13",
    "@storybook/addon-links": "^9.0.13",
    "@storybook/angular": "^9.0.13",
    "@storybook/manager-api": "^9.0.0-alpha.1",
    "@types/jasmine": "^5.1.8",
    "code-tag": "^1.2.0",
    "jasmine-core": "^5.8.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "ng-packagr": "^20.0.1",
    "storybook": "^9.0.13",
    "typescript": "^5.8.3"
  }
}
