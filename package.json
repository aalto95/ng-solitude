{
  "name": "ng-solitude",
  "version": "0.0.1",
  "scripts": {
    "storybook": "ng run ng-solitude:storybook",
    "build-storybook": "ng run ng-solitude:build-storybook",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build ng-solitude --configuration production && npm run build:styles",
    "build:styles": "sass --no-source-map src/styles/styles.scss dist/ng-solitude/styles.css",
    "build:publish": "npm run build && npm run publish",
    "test": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "publish": "cd ./dist/ng-solitude/ && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aaltoo/ng-solitude.git"
  },
  "peerDependencies": {
    "@angular/animations": ">=17.0.0",
    "@angular/common": ">=17.0.0",
    "@angular/core": ">=17.0.0",
    "@angular/forms": ">=17.0.0",
    "@angular/platform-browser": ">=17.0.0",
    "rxjs": "^7.0.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.15",
    "@angular-eslint/builder": "^17.5.2",
    "@angular-eslint/eslint-plugin": "^17.5.2",
    "@angular-eslint/eslint-plugin-template": "^17.5.2",
    "@angular-eslint/template-parser": "^17.5.2",
    "@angular/animations": "19.2.14",
    "@angular/cli": "^19.2.15",
    "@angular/common": "19.2.14",
    "@angular/compiler": "19.2.14",
    "@angular/compiler-cli": "^19.2.14",
    "@angular/core": "19.2.14",
    "@angular/forms": "19.2.14",
    "@angular/language-service": "^19.2.14",
    "@angular/platform-browser": "19.2.14",
    "@angular/platform-browser-dynamic": "19.2.14",
    "@angular/router": "19.2.14",
    "@compodoc/compodoc": "^1.1.19",
    "@storybook/addon-docs": "^9.0.13",
    "@storybook/addon-links": "^9.0.13",
    "@storybook/angular": "^9.0.13",
    "@storybook/manager-api": "^8.6.14",
    "@types/jasmine": "~3.10.0",
    "code-tag": "^1.1.0",
    "jasmine-core": "~3.10.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-packagr": "^19.2.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "storybook": "^9.0.13",
    "typescript": "^5.8.3"
  }
}
